<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/dairy_card_view"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="4dp"
            android:padding="16dp">

        <ImageView
            android:id="@+id/dairy_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_notes_black_24dp"
            android:layout_alignParentTop="true"
            />

            <TextView
                android:id="@+id/dairy_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/dairy_logo"
                android:text="12-April-2019"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/dairy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dairy_date"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                android:text="10:12"/>

            <TextView
                android:id="@+id/dairy_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dairy_time"
                android:paddingBottom="5dp"
                android:text="Title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/dairy_body_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dairy_title_txt"
                android:text="Body"
                android:textSize="16sp"
                android:textColor="#8b8b8b" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>